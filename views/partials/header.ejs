<html>
    <head>
        <title>Blog App</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.4/semantic.min.css">
        <link rel="stylesheet" href="/stylesheets/app.css">
    </head>
    <body>
        <div class="ui fixed inverted menu">
            <div class="ui container">
                <div class="header item"><i class="code icon"></i> Blog site</div>
                <% if(user == "") { %>
                    <a href="/" class="item">Home</a>
                    <a href="/signin" class="item">Signin</a>
                    <a href="/signup" class="item">Signup</a>
                <% } else { %>
                    <a href="/" class="item"><%=user%></a>
                    <a href="/blogs/new" class="item">New Post</a>
                    <a href="/logout" class="item">LogOut</a>
                <% } %>
                
            </div>
        </div>   
    